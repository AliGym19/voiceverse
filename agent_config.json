{
  "model": "gpt-4-turbo-preview",
  "temperature": 0.3,
  "ignore_patterns": [
    "*.pyc",
    "__pycache__",
    ".git",
    "venv",
    "env",
    "node_modules",
    "*.egg-info",
    "dist",
    "build",
    ".pytest_cache"
  ],
  "auto_fix": false,
  "create_backup": true,
  "output_format": "markdown",
  "security_checks": {
    "check_sql_injection": true,
    "check_xss": true,
    "check_csrf": true,
    "check_secrets": true,
    "check_auth": true
  },
  "code_style": {
    "max_line_length": 88,
    "use_type_hints": true,
    "docstring_style": "google"
  },
  "test_framework": "pytest",
  "watch_interval": 5,
  "report_directory": "agent_results"
}
