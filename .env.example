# VoiceVerse TTS Application - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Application will not start without these
# ===========================================

# Flask secret key for session management
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# ===========================================
# API KEY CONFIGURATION
# ===========================================

# OPTION 1: Users bring their own key (RECOMMENDED for public deployment)
# Leave OPENAI_API_KEY empty - users will enter their key in settings
# OPENAI_API_KEY=

# OPTION 2: Shared API key (ONLY for private/demo use)
# WARNING: If deploying publicly, users could drain your credits!
# OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# OPTIONAL - Application settings
# ===========================================

# Debug mode (set to false in production)
DEBUG=false

# Server configuration
HOST=0.0.0.0
PORT=5000

# Session lifetime in seconds (default: 3600 = 1 hour)
SESSION_LIFETIME=3600

# ===========================================
# SECURITY - Enable in production
# ===========================================

# Salt for IP address hashing in security logs
# Generate with: python3 -c "import secrets; print(secrets.token_hex(16))"
IP_HASH_SALT=your-salt-here

# Enable HTTPS (requires SSL certificates)
USE_HTTPS=false

# SSL certificate paths (when USE_HTTPS=true)
SSL_CERT_PATH=certs/dev-cert.pem
SSL_KEY_PATH=certs/dev-key.pem

# Secure cookies (enable when using HTTPS)
SECURE_COOKIES=false

# Session cookie security settings
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ===========================================
# DATABASE - For production deployment
# ===========================================

# PostgreSQL connection URL (Railway provides this automatically)
# Format: postgresql://user:password@host:port/database
# DATABASE_URL=postgresql://user:password@localhost:5432/voiceverse

# ===========================================
# RATE LIMITING - Recommended for production
# ===========================================

# Requests per minute per user
# RATE_LIMIT_PER_MINUTE=30

# TTS generations per hour per user (to prevent abuse)
# TTS_LIMIT_PER_HOUR=50
